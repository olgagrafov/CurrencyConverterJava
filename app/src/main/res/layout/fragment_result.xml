<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.olgag.currencyconverter.fragments.ResultFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center_horizontal|center"
            android:id="@+id/newRateLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
           >
            <RadioGroup
                android:id="@+id/kindOfChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
               >
                <RadioButton
                    android:id="@+id/byRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="change \n the rate"
                    style="@style/Alltxt"
                    android:buttonTint="@color/colorPrimaryDark"/>
                <RadioButton
                    android:id="@+id/byDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="change \n the date"
                    style="@style/Alltxt"
                    android:buttonTint="@color/colorPrimaryDark"/>
            </RadioGroup>
            <ImageButton
                android:id="@+id/showCalendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/calendar"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_weight="1"
                android:visibility="invisible"
                android:paddingLeft="5dp"
                />

        <EditText
            android:id="@+id/txtChangeRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Alltxt"
            android:hint="Enter \n new \n rate"
            android:inputType="numberDecimal"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:paddingRight="5dp"
            android:visibility="invisible"
          />
         <ImageButton
            android:id="@+id/btnGoNewRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/go"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_weight="1"
            android:visibility="invisible"
            />
        </LinearLayout>
        <TextView
            android:id="@+id/txtRate"
            style="@style/Alltxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:drawableBottom="@android:drawable/ic_menu_edit"
            android:gravity="center|bottom"
            android:scaleX="0"
            android:scaleY="0"
           />

        <TextView
            android:id="@+id/txtSumForChange"
            style="@style/Alltxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:scaleX="0"
            android:scaleY="0"/>
        <TextView
            android:id="@+id/txtKindOfSumFromChange"
            style="@style/Alltxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:scaleX="0"
            android:scaleY="0"/>
        <TextView
            android:id="@+id/txtSumResult"
            style="@style/Alltxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#755b0b"
            android:textSize="25sp"
            android:gravity="center"
            android:scaleX="0"
            android:scaleY="0"/>
        <TextView
            android:id="@+id/txtKindOfSumToChange"
            style="@style/Alltxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:scaleX="0"
            android:scaleY="0"
            />
    </LinearLayout>
</FrameLayout>
